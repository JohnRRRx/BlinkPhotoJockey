  <%= turbo_stream.replace "unlike-button-for-post-#{@post.id}" do %>
    <%= render 'posts/like', post: @post %>
  <% end %>

  <%= turbo_stream.remove "post-#{@post.id}" %>
  <% if current_user.likes.count.zero? %>
  <%= turbo_stream.replace "no-likes-message" do %>
    <div id="no-likes-message" class="absolute inset-0 flex items-center justify-center text-gray-600">
      <%= t('likes.none') %>
    </div>
  <% end %>
<% end %>