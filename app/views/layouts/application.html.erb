<!DOCTYPE html>
<html>
  <head>
  <%= favicon_link_tag('favicon') %>
    <title><%= content_for(:title) || "Verses" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, viewport-fit=cover">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@tarekraafat/autocomplete.js@10.2.9/dist/autoComplete.min.js"></script>
    <%= display_meta_tags(default_meta_tags) %>
    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tarekraafat/autocomplete.js@10.2.9/dist/css/autoComplete.01.min.css">

    <!-- Turbo関連のタグを先に配置 -->
    <%= javascript_include_tag "turbo", type: "module" %>

    <%# その他のアセット %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'back', media: 'all' %>
    <%= stylesheet_link_tag 'spotify_search', 'data-turbo-track': 'reload'%>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" rel="stylesheet">
    <!-- Google tag (gtag.js) -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-5FXVSSQJYD"></script>
      <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-5FXVSSQJYD');
    </script>
  </head>

  <body class="flex flex-col min-h-screen bg-[#babfd1]">
    <% if logged_in? %>
      <%= render 'shared/header' %>
    <% else %>
      <%= render 'shared/before_login_header' %>
    <% end %>
    <main class="flex-grow flex flex-col w-full p-0 m-0">
      <%= yield %>
    </main>
    <%= render 'shared/footer' %>
    <%= javascript_tag do %>
  <% end %>
  </body>
</html>
