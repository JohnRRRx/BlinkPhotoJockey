<div class="flex-grow container mx-auto px-4 pt-16 flex items-center justify-center">
  <div class="w-[450px] border-2 border-white rounded-2xl p-8 shadow-xl">
    <h1 class="text-2xl font-semibold mb-6 text-center text-gray-700"><%= t('profiles.edit') %></h1>
    <%= form_with model: @user, url: profile_path, method: :put do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <div class="mb-4">
          <!-- プレビュー -->
            <div class='flex items-center justify-center mt-3 mb-3'>
            <%= image_tag @user.icon.url,
            class: 'rounded-full w-48 h-48 object-cover',
            id: 'preview' %>
            </div>
          <!-- アップローダー -->
            <div class='flex items-center justify-center mt-3 mb-3'>
            <%= f.file_field :icon, class: 'mt-1 block max-w-xs text-sm text-gray-500
            file:mr-4 file:py-2 file:px-4
            file:rounded-full file:border-0
            file:text-sm file:font-semibold
            file:bg-gray-100 file:text-gray-700
            hover:file:bg-blue-100', 
            accept: 'image/*' %>
            <%= f.hidden_field :icon_cache %>
            </div>
      <div class="mb-4">
      <%= f.label :name, class: "block  text-sm font-semibold text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-1" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div class= "flex justify-center mt-4">
      <%= f.submit class: "w-full py-2 px-4 font-semibold border border-transparent rounded-md shadow-sm text-sm text-white bg-blue-400 hover:bg-blue-500 focus:outline-none" %>
      </div>
      <% end %>
  </div>
</div>