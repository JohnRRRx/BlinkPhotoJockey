<div class="flex items-center justify-center">
  <div class="max-w-lg mx-auto">
    <h1 class="text-2xl font-semibold mb-4"><%= t('user_sessions.new.login') %></h1>
    <%= form_with url: login_path do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block mb-1" %>
        <%= f.email_field :email, class: "border border-gray-300 rounded-md w-full p-2" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block mb-1" %>
        <%= f.password_field :password, class: "border border-gray-300 rounded-md w-full p-2" %>
      </div>
      <%= f.submit t('user_sessions.new.login') %>
    <% end %>
    <div class='text-center mt-4'>
      <%= link_to t('user_sessions.new.sign_up'), new_user_path, class: "text-blue-600 hover:underline" %>
      <br>
      <br>
      <%= link_to t('user_sessions.new.password_forget'), '#', class: "text-blue-600 hover:underline" %>
    </div>
  </div>
</div>