<div class="container flex items-center justify-center">
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto">
      <h1><%= t('user_sessions.new.login') %></h1>
      <br>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <br>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <br>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <%= f.submit t('user_sessions.new.login'), class: "btn btn-primary" %>
      <% end %>
      <div class='text-center'>
        <%= link_to t('user_sessions.new.sign_up'), new_user_path %>
        <br>
        <br>
        <%= link_to t('user_sessions.new.password_forget'), '#' %>
      </div>
    </div>
  </div>
</div>