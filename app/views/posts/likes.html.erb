<div class="container mx-auto px-4 my-10 min-h-[calc(100vh-4rem)] relative">
  <% if @like_posts.blank? %>
  <div id="no-likes-message" class="absolute inset-0 flex items-center justify-center text-gray-600">
    <%= t('likes.none') %>
  </div>
  <% end %>
  
  <div class="w-fit mx-auto grid grid-cols-1 lg:grid-cols-3 md:grid-cols-2 justify-items-center justify-center gap-y-20 gap-x-14 mt-16 mb-5" id="like-button-for-post">
    <% @like_posts.each do |post| %>
      <div id="post-<%= post.id %>">
        <%= render post %>
      </div>
    <% end %>
  </div>
</div>