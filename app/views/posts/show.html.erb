<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h3 style="display: inline;"><%= @post.title %></h3>
      <article class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <%= image_tag @post.photo_url, width: "420", height: "280", class: "card-img-top img-fluid" %>
            </div>
            <div class="col-md-9">
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@post.user.name}" %></li>
                <li class="list-inline-item"><%= l @post.created_at, format: :long %></li>
              </ul>
              <div class='d-flex justify-content-end'>
                <%= link_to "#", id: "button-edit-#{@post.id}" do %>
                  <i class='bi bi-pencil-fill'></i>
                <% end %>
                <%= link_to "#", id: "button-delete-#{@post.id}", class: "ms-2" do %>
                  <i class="bi bi-trash-fill"></i>
                <% end %>
              </div>
              </div>
            </div>
          </div>
        </article>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <table class="table">
        </table>
      </div>
    </div>
  </div>
</div>