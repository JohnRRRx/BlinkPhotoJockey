<div class="bg-white rounded-lg shadow-md relative">
  <%= link_to image_tag(post.photo_url, class: "h-auto object-cover rounded-t-lg"), post_path(post) %>

  <div class="absolute top-2 right-2">
    <% if current_user.like?(post) %>
      <%= render 'unlike', { post: post } %>
    <% else %>
      <%= render 'like', { post: post } %>
    <% end %>
  </div>

  <% if current_user.own?(post) %>
    <div class="absolute top-2 left-2 flex space-x-2">
      <%= link_to 'Edit', edit_post_path(post), class: "text-gray-400 hover:text-blue-700" %>
      <%= link_to 'Delete', post_path(post), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "text-gray-400 hover:text-red-700" %>
    </div>
  <% end %>
</div>