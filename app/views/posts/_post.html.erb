<div class="bg-white rounded-lg shadow-md relative">
  <%= link_to image_tag(post.photo_url, class: "mx-auto my-5 object-cover rounded-t-lg", width:"400", height:"300"), post_path(post) %>

  <div class="absolute top-4 right-4">
    <% if current_user && current_user.like?(post) %>
      <%= render 'unlike', { post: post } %>
    <% elsif current_user %>
      <%= render 'like', { post: post } %>
    <% end %>
  </div>

  <% if current_user && current_user.own?(post) %>
    <div class="top-10 left-10 flex space-x-2">
      <%= link_to 'Edit', edit_post_path(post), class: "text-gray-400 hover:text-blue-700" %>
      <%= link_to 'Delete', post_path(post), data: {turbo_method: :delete, turbo_confirm: t('defaults.flash_message.confirm') }, class: "text-gray-400 hover:text-red-700" %>
    </div>
  <% end %>
</div>