<div class="space-y-4">
  <div class="bg-white rounded-lg shadow-sm p-4">
    <div class="space-y-2">
      <%= label_tag :song_search, "曲を検索", class: "block text-sm font-medium text-gray-700" %>
      <div class="flex gap-2">
        <%= text_field_tag :song_search, nil,
          class: "flex-1 border rounded-lg px-4 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "曲名やアーティスト名で検索" %>
        <%= button_tag type: "button",
          id: "search-button",
          class: "px-4 py-2 bg-gray-400 text-white rounded-lg hover:bg-blue-500 transition-colors duration-200 flex-shrink-0 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <i class="fa-solid fa-magnifying-glass"></i>
        <% end %>
      </div>
    </div>
  </div>

  <%= javascript_include_tag 'spotify_search' %>
  <div id="search-results" class="mb-8"></div>
</div>