<div class="min-h-screen flex flex-col items-center pt-28 pb-24 px-4">
  <div class="w-[800px] border-2 border-white rounded-2xl shadow-xl p-8">
    <h1 class="text-3xl font-bold text-center mb-4"><%= @post.new_record? ? t('.title') : t('posts.edit.title') %></h1><!--ページタイトル-->
    <%= form_with model: @post, local: true, data: { turbo: false } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <div class="space-y-6">
        <div>
          <%= f.label :title, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.text_area :title, class: "border rounded-lg px-3 py-2 w-full h-32" %>
        </div>

        <div>
          <%= f.label :photo, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.file_field :photo, class: "border rounded-lg px-3 py-2 w-full", accept: 'image/*' %>
          <%= f.hidden_field :photo_cache %>
        </div>

        <%= render 'spotify_search' %>

        <%= f.hidden_field :song_id %>
        <%= f.hidden_field :song_name %>
        <%= f.hidden_field :artist_name %>
        <%= f.hidden_field :album_name %>

        <%= render 'tag_form', form: f, post: @post %>
      </div>

      <div class="flex justify-center mt-8">
        <%= f.button type: "submit", class: 'neon-button' do %>
          <span>ON AIR</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>