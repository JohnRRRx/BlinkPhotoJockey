<header>
  <nav class="bg-gray-900 w-full z-20 fixed top-0">
    <div class="w-full flex flex-wrap items-center justify-between mx-auto p-4">

      <%= link_to root_path, class: "flex items-center space-x-3 rtl:space-x-reverse" do %>
        <span class="self-center text-2xl font-semibold whitespace-nowrap text-white"><%= t('Title') %></span>
      <% end %>

      <div class="items-center justify-between w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
        <ul class="flex flex-col p-4 md:p-0 mt-4 font-semibold md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0">
          <li>
            <div>
            <%= link_to t('header.post_index'), posts_path,  class: "nav-link icon-link  text-white mr-6" %>
            <%= link_to t('header.new_post'), new_post_path,  class: "nav-link icon-link  text-white mr-6" %>
            <%= link_to t('header.like_index'), likes_posts_path, class: "nav-link icon-link  text-white mr-6" %>
            <%= link_to t('header.profile'), '#',  class: "nav-link icon-link  text-white mr-6" %>
            <%= link_to t('header.logout'), logout_path, data: { turbo_method: :delete }, class: "nav-link icon-link text-white bg-transparent border-0 p-0 hover:text-gray-300 cursor-pointer", form_class: "inline-block"%>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
<div class="fixed top-16 w-full z-30">
  <%= render 'layouts/flash_messages' %>
</div>